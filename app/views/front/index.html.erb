<div class="dashboard-grid container py-4">

  <%# ‚îÄ‚îÄ Welcome Banner ‚îÄ‚îÄ %>
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex align-items-center justify-content-between">
        <div>
          <h3 class="mb-1" style="font-weight: 600;">
            üåä Welcome to <strong><%= @stats[:system][:hostname].split('-').map(&:capitalize).join('-') %></strong>
          </h3>
          <span class="text-muted">
            Up <%= @stats[:system][:uptime] %> ¬∑ <%= @stats[:system][:os] %>
          </span>
        </div>
        <div class="d-none d-md-block text-muted" style="font-size: 12px;">
          <%= Time.current.strftime('%A, %B %-d, %Y') %>
        </div>
      </div>
    </div>
  </div>

  <%# ‚îÄ‚îÄ Resource Gauges ‚îÄ‚îÄ %>
  <div class="row mb-4 g-3">
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="fw-bold">üî≤ CPU</span>
            <span class="text-muted" style="font-size: 12px;"><%= @stats[:resources][:cpu][:detail] %></span>
          </div>
          <div class="progress" style="height: 10px;">
            <% cpu = @stats[:resources][:cpu][:percent] %>
            <div class="progress-bar <%= cpu > 80 ? 'bg-danger' : cpu > 50 ? 'bg-warning' : 'bg-success' %>"
                 role="progressbar" style="width: <%= cpu %>%"></div>
          </div>
          <div class="text-end mt-1" style="font-size: 12px; color: var(--kai-muted);"><%= cpu %>%</div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="fw-bold">üíæ Memory</span>
            <span class="text-muted" style="font-size: 12px;"><%= @stats[:resources][:memory][:detail] %></span>
          </div>
          <div class="progress" style="height: 10px;">
            <% mem = @stats[:resources][:memory][:percent] %>
            <div class="progress-bar <%= mem > 80 ? 'bg-danger' : mem > 50 ? 'bg-warning' : 'bg-success' %>"
                 role="progressbar" style="width: <%= mem %>%"></div>
          </div>
          <div class="text-end mt-1" style="font-size: 12px; color: var(--kai-muted);"><%= mem %>%</div>
        </div>
      </div>
    </div>
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-body">
          <div class="d-flex justify-content-between align-items-center mb-2">
            <span class="fw-bold">üìÄ Disk</span>
            <span class="text-muted" style="font-size: 12px;"><%= @stats[:resources][:disk][:detail] %></span>
          </div>
          <div class="progress" style="height: 10px;">
            <% disk = @stats[:resources][:disk][:percent] %>
            <div class="progress-bar <%= disk > 80 ? 'bg-danger' : disk > 50 ? 'bg-warning' : 'bg-success' %>"
                 role="progressbar" style="width: <%= disk %>%"></div>
          </div>
          <div class="text-end mt-1" style="font-size: 12px; color: var(--kai-muted);"><%= disk %>%</div>
        </div>
      </div>
    </div>
  </div>

  <%# ‚îÄ‚îÄ Services + Quick Stats ‚îÄ‚îÄ %>
  <div class="row mb-4 g-3">

    <%# Services %>
    <div class="col-md-5">
      <div class="card h-100">
        <div class="card-header" style="background: var(--kai-dark); color: white;">
          <strong>‚öôÔ∏è Services</strong>
        </div>
        <div class="card-body p-0">
          <table class="table table-sm mb-0">
            <tbody>
              <% @stats[:services].each do |svc| %>
                <tr>
                  <td class="ps-3 py-2"><%= svc[:name] %></td>
                  <td class="text-end pe-3 py-2">
                    <% if svc[:running] %>
                      <span class="badge bg-success">Running</span>
                    <% else %>
                      <span class="badge" style="background: var(--kai-border); color: var(--kai-muted);">Stopped</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <%# Quick Stats %>
    <div class="col-md-7">
      <div class="row g-3 h-100">
        <div class="col-6">
          <a href="/tab/users" class="text-decoration-none">
            <div class="card h-100 dashboard-stat-card">
              <div class="card-body text-center py-4">
                <div style="font-size: 2rem;">üë•</div>
                <div class="fs-4 fw-bold" style="color: var(--kai-text);"><%= @stats[:counts][:users] %></div>
                <div class="text-muted">Users</div>
              </div>
            </div>
          </a>
        </div>
        <div class="col-6">
          <a href="/tab/shares" class="text-decoration-none">
            <div class="card h-100 dashboard-stat-card">
              <div class="card-body text-center py-4">
                <div style="font-size: 2rem;">üìÅ</div>
                <div class="fs-4 fw-bold" style="color: var(--kai-text);"><%= @stats[:counts][:shares] %></div>
                <div class="text-muted">Shares</div>
              </div>
            </div>
          </a>
        </div>
        <div class="col-6">
          <a href="/tab/network" class="text-decoration-none">
            <div class="card h-100 dashboard-stat-card">
              <div class="card-body text-center py-4">
                <div style="font-size: 2rem;">üåê</div>
                <div class="fs-4 fw-bold" style="color: var(--kai-text);"><%= @stats[:counts][:dns_aliases] %></div>
                <div class="text-muted">DNS Aliases</div>
              </div>
            </div>
          </a>
        </div>
        <div class="col-6">
          <a href="/tab/apps/docker_apps" class="text-decoration-none">
            <div class="card h-100 dashboard-stat-card">
              <div class="card-body text-center py-4">
                <div style="font-size: 2rem;">üì¶</div>
                <div class="fs-4 fw-bold" style="color: var(--kai-text);"><%= @stats[:counts][:docker_apps] %></div>
                <div class="text-muted">Running Apps</div>
              </div>
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>

  <%# ‚îÄ‚îÄ Storage Overview ‚îÄ‚îÄ %>
  <div class="row mb-4 g-3">
    <div class="col-12">
      <div class="card">
        <div class="card-header" style="background: var(--kai-dark); color: white;">
          <div class="d-flex justify-content-between align-items-center">
            <strong>üóÑÔ∏è Storage</strong>
            <a href="/tab/disks/storage_pool" class="text-white text-decoration-none" style="font-size: 12px;">Manage ‚Üí</a>
          </div>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4">
              <div class="text-muted mb-1" style="font-size: 12px;">Shares</div>
              <div class="fs-5 fw-bold"><%= @stats[:storage][:shares_count] %></div>
            </div>
            <div class="col-md-4">
              <div class="text-muted mb-1" style="font-size: 12px;">Indexed Files</div>
              <div class="fs-5 fw-bold"><%= number_with_delimiter(@stats[:storage][:total_files]) %></div>
            </div>
            <div class="col-md-4">
              <div class="text-muted mb-1" style="font-size: 12px;">Storage Pool</div>
              <div class="fs-5 fw-bold">
                <% if @stats[:storage][:greyhole_installed] %>
                  <span class="text-success"><%= @stats[:storage][:pool_drives] %> drives</span>
                <% else %>
                  <span class="text-muted">Not configured</span>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# ‚îÄ‚îÄ Dashboard Apps ‚îÄ‚îÄ %>
  <% if @apps.any? %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header" style="background: var(--kai-dark); color: white;">
            <div class="d-flex justify-content-between align-items-center">
              <strong>üöÄ Apps</strong>
              <a href="/tab/apps" class="text-white text-decoration-none" style="font-size: 12px;">All Apps ‚Üí</a>
            </div>
          </div>
          <div class="card-body">
            <div class="row g-2">
              <% @apps.each do |app| %>
                <div class="col-auto">
                  <a href="<%= app.url %>" target="_blank" class="btn btn-outline-secondary btn-sm">
                    <%= app.name %>
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

</div>

<style>
  .dashboard-stat-card {
    transition: transform 0.15s ease, box-shadow 0.15s ease;
    cursor: pointer;
  }
  .dashboard-stat-card:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px var(--kai-shadow);
  }
</style>
