<div class="dashboard-grid py-4">

  <%# ── Welcome Banner ── %>
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex align-items-center justify-content-between">
        <div>
          <h3 class="mb-1" style="font-weight: 600;">
            <%= lucide_icon('waves', size: 16) %> Welcome to <strong><%= @stats[:system][:hostname] %></strong>
          </h3>
          <span class="text-muted">
            Up <%= @stats[:system][:uptime] %> · <%= @stats[:system][:os] %>
          </span>
        </div>
        <div class="d-none d-md-block text-muted" style="font-size: 12px;">
          <%= Time.current.strftime('%A, %B %-d, %Y') %>
        </div>
      </div>
    </div>
  </div>

  <%# ── Shares (Quick Access) ── %>
  <% if @shares.any? %>
  <div class="row mb-4 g-3">
    <div class="col-12">
      <div class="card">
        <div class="card-header" style="background: var(--kai-dark); color: white;">
          <div class="d-flex justify-content-between align-items-center">
            <strong><%= lucide_icon('folder', size: 16) %> Shares</strong>
            <a href="/shares" class="text-white text-decoration-none" style="font-size: 12px;">Manage →</a>
          </div>
        </div>
        <div class="card-body p-2">
          <div class="row g-2">
            <% @shares.each do |share| %>
              <div class="col-6 col-md-4 col-lg-3">
                <a href="<%= file_browser_path(share) %>" class="d-block text-decoration-none p-2 rounded" style="color: var(--kai-text); transition: background 0.15s;" onmouseover="this.style.background='rgba(255,255,255,0.06)'" onmouseout="this.style.background=''">
                  <div class="d-flex align-items-center gap-2">
                    <span style="font-size: 1.5rem;"><%= lucide_icon('folder', size: 20) %></span>
                    <div>
                      <div class="fw-semibold" style="font-size: 0.9rem;"><%= share.name %></div>
                      <div class="text-muted" style="font-size: 0.75rem;"><%= share.path %></div>
                    </div>
                  </div>
                </a>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <%# ── Running Apps (Quick Launch) ── %>
  <% if @apps.any? %>
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header" style="background: var(--kai-dark); color: white;">
            <div class="d-flex justify-content-between align-items-center">
              <strong><%= lucide_icon('package', size: 16) %> Apps</strong>
              <a href="/apps" class="text-white text-decoration-none" style="font-size: 12px;">All Apps →</a>
            </div>
          </div>
          <div class="card-body p-2">
            <div class="row g-2">
              <% @apps.each do |app| %>
                <div class="col-4 col-md-3 col-lg-2">
                  <a href="<%= app.url %>" class="d-flex flex-column align-items-center text-decoration-none p-3 rounded" style="color: var(--kai-text); transition: background 0.15s, transform 0.15s;" onmouseover="this.style.background='rgba(255,255,255,0.06)';this.style.transform='translateY(-2px)'" onmouseout="this.style.background='';this.style.transform=''">
                    <div style="width: 48px; height: 48px; border-radius: 12px; background: rgba(255,255,255,0.08); display: flex; align-items: center; justify-content: center; margin-bottom: 6px; box-shadow: 0 2px 8px rgba(0,0,0,0.2); overflow: hidden;">
                      <% if app.logo_url.present? %>
                        <img src="<%= app.logo_url %>" alt="<%= app.name %>" style="width: 36px; height: 36px; object-fit: contain;">
                      <% else %>
                        <span style="font-size: 1.4rem;"><%= lucide_icon('package', size: 20) %></span>
                      <% end %>
                    </div>
                    <span style="font-size: 0.8rem; font-weight: 500; text-align: center; line-height: 1.2;"><%= app.name %></span>
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <%# ── System Health (CPU + Memory) + Services ── %>
  <div class="row mb-4 g-3">
    <div class="col-md-8">
      <div class="card h-100">
        <div class="card-header" style="background: var(--kai-dark); color: white;">
          <strong><%= lucide_icon('bar-chart-3', size: 16) %> System</strong>
        </div>
        <div class="card-body">
          <%# CPU %>
          <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-1">
              <span style="font-size: 0.85rem;">CPU</span>
              <span class="text-muted" style="font-size: 0.8rem;"><%= @stats[:resources][:cpu][:detail] %></span>
            </div>
            <div class="progress" style="height: 8px;">
              <% cpu = @stats[:resources][:cpu][:percent] %>
              <div class="progress-bar <%= cpu > 80 ? 'bg-danger' : cpu > 50 ? 'bg-warning' : 'bg-success' %>"
                   style="width: <%= cpu %>%"></div>
            </div>
          </div>
          <%# Memory %>
          <div class="mb-3">
            <div class="d-flex justify-content-between align-items-center mb-1">
              <span style="font-size: 0.85rem;">Memory</span>
              <span class="text-muted" style="font-size: 0.8rem;"><%= @stats[:resources][:memory][:detail] %></span>
            </div>
            <div class="progress" style="height: 8px;">
              <% mem = @stats[:resources][:memory][:percent] %>
              <div class="progress-bar <%= mem > 80 ? 'bg-danger' : mem > 50 ? 'bg-warning' : 'bg-success' %>"
                   style="width: <%= mem %>%"></div>
            </div>
          </div>
          <%# Drives %>
          <% @stats[:drives].each do |drive| %>
            <div class="mb-3">
              <div class="d-flex justify-content-between align-items-center mb-1">
                <span style="font-size: 0.85rem;">
                  <%= drive[:label] %>
                  <span class="text-muted" style="font-size: 0.75rem;">(<%= drive[:device] %>)</span>
                </span>
                <span class="text-muted" style="font-size: 0.8rem;"><%= drive[:used] %> / <%= drive[:total] %></span>
              </div>
              <div class="progress" style="height: 8px;">
                <% pct = drive[:percent] %>
                <div class="progress-bar <%= pct > 90 ? 'bg-danger' : pct > 70 ? 'bg-warning' : 'bg-info' %>"
                     style="width: <%= pct %>%"></div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <%# Services %>
    <div class="col-md-4">
      <div class="card h-100">
        <div class="card-header" style="background: var(--kai-dark); color: white;">
          <strong><%= lucide_icon('settings', size: 16) %> Services</strong>
        </div>
        <div class="card-body p-0">
          <table class="table table-sm mb-0" style="color: var(--kai-text);">
            <tbody>
              <% @stats[:services].each do |svc| %>
                <tr>
                  <td class="ps-3 py-2" style="border-color: var(--kai-border, rgba(255,255,255,0.05));"><%= svc[:name] %></td>
                  <td class="text-end pe-3 py-2" style="border-color: var(--kai-border, rgba(255,255,255,0.05));">
                    <% if svc[:running] %>
                      <span class="badge bg-success">Running</span>
                    <% else %>
                      <span class="badge" style="background: var(--kai-border); color: var(--kai-muted);">Stopped</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%# ── Quick Actions ── %>
  <div class="row mb-4">
    <div class="col-12">
      <div class="d-flex flex-wrap gap-2">
        <a href="/users" class="btn btn-sm btn-outline-secondary"><%= lucide_icon('users', size: 14) %> <%= @stats[:counts][:users] %> Users</a>
        <a href="/shares" class="btn btn-sm btn-outline-secondary"><%= lucide_icon('folder', size: 14) %> <%= @stats[:counts][:shares] %> Shares</a>
        <a href="/network" class="btn btn-sm btn-outline-secondary"><%= lucide_icon('globe', size: 14) %> <%= @stats[:counts][:dns_aliases] %> DNS Aliases</a>
        <a href="/apps/docker_apps" class="btn btn-sm btn-outline-secondary"><%= lucide_icon('package', size: 14) %> <%= @stats[:counts][:docker_apps] %> Running Apps</a>
        <a href="/disks" class="btn btn-sm btn-outline-secondary"><%= lucide_icon('hard-drive', size: 14) %> Disks</a>
        <a href="/settings" class="btn btn-sm btn-outline-secondary"><%= lucide_icon('settings', size: 14) %> Settings</a>
      </div>
    </div>
  </div>


</div>
