- flash.each do |name, msg|
  div class="alert alert-#{name} alert-dismissible fade show flash-auto-dismiss" role="alert"
    button.btn-close aria-label="Close" data-bs-dismiss="alert" type="button"
    .container.ps-5
      strong = msg.html_safe

javascript:
  setTimeout(function() {
    document.querySelectorAll('.flash-auto-dismiss').forEach(function(el) {
      el.style.transition = 'opacity 0.5s';
      el.style.opacity = '0';
      setTimeout(function() { if (el.parentNode) el.remove(); }, 500);
    });
  }, 3000);
