<div class="disk-pool-partition" id="disk-pool-partition-<%= path.parameterize %>"
     data-controller="pool-toggle"
     data-pool-toggle-url-value="<%= disks_toggle_disk_pool_partition_path(path: path) %>"
     data-pool-toggle-path-value="<%= path %>">
  <div class="form-check">
    <input class="form-check-input" type="checkbox"
           <%= 'checked' if checked %>
           data-pool-toggle-target="checkbox"
           data-action="change->pool-toggle#toggle">
    <label class="form-check-label" data-pool-toggle-target="label"><%= checked ? t('in_pool', default: 'In pool') : t('add_to_pool', default: 'Add to pool') %></label>
    <span class="spinner-border spinner-border-sm ms-1" style="display:none" data-pool-toggle-target="spinner"></span>
  </div>
</div>
